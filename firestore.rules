rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to get user role
    function getUserRole() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
    }

    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user is admin
    function isAdmin() {
      return isAuthenticated() && getUserRole() == 'admin';
    }

    // Helper function to check if user is tech
    function isTech() {
      return isAuthenticated() && getUserRole() == 'tech';
    }

    // Helper function to check if user is viewer
    function isViewer() {
      return isAuthenticated() && getUserRole() == 'viewer';
    }

    // Helper function to check if user can write (admin or tech)
    function canWrite() {
      return isAdmin() || isTech();
    }

    // Helper function to check if user can read (any authenticated user)
    function canRead() {
      return isAuthenticated();
    }

    // Users collection - only admins can modify roles
    match /users/{userId} {
      // Users can read their own document, admins can read all
      allow read: if isAuthenticated() && (request.auth.uid == userId || isAdmin());

      // Only admins can update user roles
      allow update: if isAdmin();

      // Users can create their own document during signup
      allow create: if isAuthenticated() && request.auth.uid == userId;

      // Only admins can delete users
      allow delete: if isAdmin();
    }

    // Clients/Accounts collection
    match /clients/{clientId} {
      allow read: if canRead();
      allow create, update, delete: if canWrite();
    }

    // Equipment collection
    match /equipment/{equipmentId} {
      allow read: if canRead();
      allow create, update, delete: if canWrite();
    }

    // Repairs collection
    match /repairs/{repairId} {
      allow read: if canRead();
      allow create, update, delete: if canWrite();
    }

    // Invoices collection
    match /invoices/{invoiceId} {
      allow read: if canRead();
      allow create, update, delete: if canWrite();
    }

    // HARP Inspections collection
    match /harp-inspections/{inspectionId} {
      allow read: if canRead();
      allow create, update, delete: if canWrite();
    }

    // Schedules/Appointments collection
    match /schedules/{scheduleId} {
      allow read: if canRead();
      allow create, update, delete: if canWrite();
    }

    // Manuals collection (metadata)
    match /manuals/{manualId} {
      allow read: if canRead();
      allow create, update, delete: if canWrite();
    }

    // Service History collection
    match /service-history/{historyId} {
      allow read: if canRead();
      allow create, update, delete: if canWrite();
    }

    // Parts/Inventory collection
    match /parts/{partId} {
      allow read: if canRead();
      allow create, update, delete: if canWrite();
    }

    // Notifications collection
    match /notifications/{notificationId} {
      // Users can read their own notifications
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;

      // Admins and techs can create notifications
      allow create: if canWrite();

      // Users can update their own notifications (e.g., mark as read)
      allow update: if isAuthenticated() && resource.data.userId == request.auth.uid;

      // Only admins can delete notifications
      allow delete: if isAdmin();
    }

    // Deny all other collections by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
